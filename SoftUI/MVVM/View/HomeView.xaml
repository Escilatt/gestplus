<UserControl x:Class="SoftUI.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoftUI.MVVM.View"
             xmlns:viewModel="clr-namespace:SoftUI.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="900">

    <UserControl.DataContext>
        <viewModel:MainViewModel/>
    </UserControl.DataContext>


    <StackPanel>
        <Grid>

            <ContentControl x:Name="MainContent" Margin="0,0,0,-454" />

        </Grid>
        
        <StackPanel x:Name="Main">

        <TextBlock Text="¿Qué deseas hacer hoy?"
                   Foreground="White"
                   FontSize="28"

                   Margin="0,5,10,20"
                   FontFamily="/Fonts/#Roboto" FontWeight="SemiBold" Width="818">
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect>
        </TextBlock>
        
        



        <StackPanel Orientation="Horizontal" Width="771">
            <Border Width="340"
                   Height="200"
                   CornerRadius="10"
                    Margin="35,0,0,0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="ForestGreen" Offset="0.0"/>
                        <GradientStop Color="#0D3239" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="0"
                                       RadiusY="0"
                                       Rect="0,0,400,200"/>
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="Consulta tu Inventario"
                                   HorizontalAlignment="Left"
                                   Foreground="White"
                                   FontSize="30"
                                   Margin="15,15,10,0" Width="299"
                                   FontFamily="/Fonts/#Roboto" FontStretch="Normal" FontWeight="SemiBold">
                            <TextBlock.Effect>
                                <DropShadowEffect/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="Revisa y administra tus productos en tiempo real."
                         Foreground="White"
                         FontSize="14" Width="314"
                                   FontFamily="/Fonts/#Roboto" FontWeight="ExtraBold">
                            <TextBlock.Effect>
                                <DropShadowEffect/>
                            </TextBlock.Effect>
                        </TextBlock>

                    </StackPanel>

                    <Image
                           Source="/Images/Inv.png" Margin="161,35,-22,-81" RenderTransformOrigin="0.5,0.5">
                        <Image.Effect>
                            <DropShadowEffect/>
                        </Image.Effect>
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.13"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>

                    <Button x:Name="ButInv"
                            Width="340"
                            Height="200" 
                            BorderThickness="3,3,3,3"
                            Background="Transparent"
                            Visibility="Visible" Cursor="Hand"
                            Style="{StaticResource ButtonTheme}" 
                            Command ="{Binding ConsProdCommand}" Click="ButInv_Click"/>




                </Grid>
            </Border>

            <Border Width="340"
                    Height="200"              
                    Margin="45,0,0,0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="Crimson" Offset="0.0"/>
                        <GradientStop Color="#0D3239" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="0"
                    RadiusY="10"
                    Rect="0,0,400,200"/>
                </Border.Clip>

                <StackPanel>
                    <TextBlock Text="Registro de Empleados"
                     HorizontalAlignment="Left"
                               FontFamily="/Fonts/#Roboto"
                     Foreground="White"
                     FontSize="30"
                     Margin="15,15,10,0" Width="319" FontWeight="SemiBold">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Gestiona y actualiza la información de tu equipo."
                     Foreground="White"
                               FontFamily="/Fonts/#Roboto"
                               Margin="5,0,10,0"
                     FontSize="14" Width="310" FontWeight="ExtraBold">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Image Width="156"
                     Height="132"
                     HorizontalAlignment="Right"
                     Margin="0,6,2,0"
                     Source="/Images/Emp.png">
                        <Image.Effect>
                            <DropShadowEffect/>
                        </Image.Effect>
                    </Image>

                    <Button x:Name="ButEmp"
                             Width="340"
                             Height="202" Click="ButEmp_Click"
                             BorderThickness="3,3,3,5"
                             Margin="0,-210,0,0"
                             Background="Transparent"
                             Visibility="Visible"
                             Style="{StaticResource ButtonTheme}" Cursor="Hand" ClipToBounds="True"/>

                    <Button/>

                </StackPanel>

            </Border>

            <StackPanel/>

        </StackPanel>
            <StackPanel Orientation="Horizontal" Width="786">
                <Grid>
                    <Border Width="250"
                    Height="130"        
                    CornerRadius="10"
                    Margin="15,30,0,0">

                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="RoyalBlue" Offset="0.0"/>
                                <GradientStop Color="#17171C" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Image
       Source="/images/Sal.png" Margin="151,48,4,5">
                            <Image.Effect>
                                <DropShadowEffect/>
                            </Image.Effect>
                        </Image>

                    </Border>



                    <TextBlock Text="Tus Ventas"
                           Width="161"
                           HorizontalAlignment="Left"
                           FontSize="25"
                           FontFamily="/Fonts/#Roboto"
                           Foreground="White" Margin="30,50,0,106" FontWeight="SemiBold">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Text="Monitorea tus ventas y calcula ganancias."
                           Width="230"
                           HorizontalAlignment="Left"
                           FontSize="12"
                           FontFamily="/Fonts/#Roboto"
                           Foreground="White" Margin="28,80,0,89" FontWeight="ExtraBold">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <Button x:Name="ButProd" 
                        Margin="15,43,0,13"
                        Background="Transparent"
                        BorderThickness="3,3,3,3"
                        Visibility="Visible"
                        Click="ButProd_Click" Cursor="Hand"
                        Style="{StaticResource ButtonTheme}"/>


                </Grid>

                <Grid>
                    <Border Width="250"
                    Height="130"
                    CornerRadius="10"
                    Margin="10,30,0,0">

                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="DarkSlateGray" Offset="0.0"/>
                                <GradientStop Color="#17171C" Offset="1"/>
                            </LinearGradientBrush>

                        </Border.Background>


                        <Image
   Source="/Images/Vent.png" Margin="156,60,0,4">
                            <Image.Effect>
                                <DropShadowEffect/>
                            </Image.Effect>
                        </Image>


                    </Border>


                    <TextBlock Text="Calcular Sueldos"
                           Width="202"
                           HorizontalAlignment="Center"
                           FontSize="25"
                           FontFamily="/Fonts/#Roboto"
                           Foreground="White" Margin="-5,50,0,106" FontWeight="SemiBold">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Text="Calcula los salarios de tus empleados."
                           Width="214"
                           HorizontalAlignment="Left"
                           FontSize="12"
                           FontFamily="/Fonts/#Roboto"
                           Foreground="White" Margin="28,80,0,89" FontWeight="ExtraBold">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <Button x:Name="ButSal" 
                          Margin="10,43,0,13"
                          Background="Transparent"
                          BorderThickness="3,3,3,3"
                          Visibility="Visible"
                          Click="ButSal_Click" Cursor="Hand"
                        Style="{StaticResource ButtonTheme}"/>

                </Grid>

                <Grid>

                    <Border Width="250"
                    Height="130"
                    CornerRadius="10"
                    Margin="10,30,0,0">

                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="Black" Offset="0.0"/>
                                <GradientStop Color="#17171C" Offset="1"/>
                            </LinearGradientBrush>

                        </Border.Background>

                        <Image
                           Source="/images/logoff.png" Margin="122,18,-16,18">
                            <Image.Effect>
                                <DropShadowEffect/>
                            </Image.Effect>
                        </Image>


                    </Border>

                    <TextBlock Text="Cerrar&#xA;Sesión"
                           Width="90"
                           HorizontalAlignment="Left"
                           FontSize="25"
                           FontFamily="/Fonts/#Roboto"
                           Foreground="White" Margin="58,76,0,46" FontWeight="SemiBold">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <Button x:Name="ButCerr" 
                        Margin="10,43,0,13"
                        Background="Transparent"
                        BorderThickness="3,3,3,3"
                        Visibility="Visible"
                        Click="ButCerr_Click" Cursor="Hand"
                        Style="{StaticResource ButtonTheme}"/>

                </Grid>




            </StackPanel>
        </StackPanel>

    </StackPanel>

</UserControl>
